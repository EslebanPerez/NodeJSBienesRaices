extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold=title
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-500.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-4 md:px-10")
            form.space-y-4(method="POST" action="/propiedades/crear")
                input(type="hidden" name="_csrf" value=csrfToken)
                div(class='space-y-4')
                    div
                        h3.text-lg.leading-6.font-medium.text-gray-900 Información general
                        p.text-gray-600 Añade información sobre la propiedad en venta

                    div        
                        label(for="titulo",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Título de anuncio
                        input(value= datos.titulo ? datos.titulo : '' type="text", name="titulo", placeholder="Titulo de propiedad, ej. Casa en la playa", class="titulo w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                    div        
                        label(for="descripcion",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Descripción
                        textarea(name="descripcion", placeholder="Descripción de propiedad", class="titulo w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")= datos.descripcion ? datos.descripcion : ''
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")   
                        div(class="md:w-1/2")          
                            label(for="categoria",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Categoría
                            select(name="categoria" class="categoria w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                                option(value="" ) - Selecciona -
                                each categoria in categorias 
                                    option(value=categoria.id selected= datos.categoria ? datos.categoria == categoria.id ? true : false : null)=categoria.nombre
                        div(class="md:w-1/2")        
                            label(for="precio",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Precio
                            select(name="precio" class=" precio w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                                option(value="") - Selecciona -
                                each precio in precios
                                    option(value=precio.id selected= datos.precio ? datos.precio == precio.id ? true : false : null)=precio.nombre

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")   
                        div(class="md:w-1/3")          
                            label(for="habitaciones",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Habitaciones
                            select(name="habitaciones" class=" habitaciones w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                                option(value="") - Selecciona -
                                - var n = 1;
                                    while n <= 5
                                        option(value=n selected= datos.habitaciones ? datos.habitaciones == n ? true : false : null) #{n++}
                                    
                        div(class="md:w-1/3")        
                            label(for="estacionamientos",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Estacionamientos
                            select(name="estacionamientos" class="estacionamientos w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                                option(value="") - Selecciona -
                                - var n = 1;
                                    while n <= 4
                                        option(value=n selected= datos.estacionamientos ? datos.estacionamientos == n ? true : false : null) #{n++}
                        div(class="md:w-1/3")        
                            label(for="wc",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) No. baños 
                            select(name="wc" class="wc w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200  focus:shadow-outline")
                                option(value="") - Selecciona -
                                - var n = 1;
                                    while n <= 5
                                        option(value=n selected= datos.wc ? datos.wc == n ? true : false : null) #{n++}

                    div.border-gray-200.border-t.py-5.space-y-2                  
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación
                        p.text-gray-600 Arrastra el pin en la ubicación de propiedad en el mapa
                        #mapa.h-96

                        div 
                            p.calle= datos.calle ? datos.calle : ''

                        input(type="hidden", name="calle", id="calle" value= datos.calle ? datos.calle : '')
                        input(type="hidden", name="lat", id="lat" value= datos.lat ? datos.lat : '')
                        input(type="hidden", name="lng", id="lng" value= datos.lng ? datos.lng : '')
                    input(type="submit" value="Añadir imagen" class="w-full py-3 bg-lime-400 rounded-md hover:bg-lime-600 text-zinc-900 font-bold uppercase cursor-pointer")

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")
