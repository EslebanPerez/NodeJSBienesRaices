extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold=title

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-4 md:px-10")
            form.space-y-4(action="") 
                div(class='space-y-4')
                    div
                        h3.text-lg.leading-6.font-medium.text-gray-900 Información general
                        p.text-gray-600 Añade información sobre la propiedad en venta

                    div        
                        label(for="title",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Título de anuncio
                        input(type="text", name="title", placeholder="Titulo de propiedad, ej. Casa en la playa", class="titulo w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")   
                        div(class="md:w-1/2")          
                            label(for="category",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Categoría
                            select(name="category" class="category w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                                option(value="") - Selecciona -
                        div(class="md:w-1/2")        
                            label(for="price",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Precio
                            select(name="price" class=" price w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                                option(value="") - Selecciona -

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")   
                        div(class="md:w-1/3")          
                            label(for="habitaciones",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Habitaciones
                            select(name="habitaciones" class=" habitaciones w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                                option(value="") - Selecciona -
                                - var n = 1;
                                    while n <= 5
                                        option(value=n) #{n++}
                                    
                        div(class="md:w-1/3")        
                            label(for="estacionamientos",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Estacionamientos
                            select(name="estacionamientos" class="estacionamientos w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200 focus:shadow-outline")
                                option(value="") - Selecciona -
                                - var n = 1;
                                    while n <= 4
                                        option(value=n) #{n++}
                        div(class="md:w-1/3")        
                            label(for="wc",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) No. baños 
                            select(name="wc" class="wc w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow focus:outline-1 focus:outline-lime-200  focus:shadow-outline")
                                option(value="") - Selecciona -
                                - var n = 1;
                                    while n <= 5
                                        option(value=n) #{n++}

                    div.border-gray-200.border-t.py-5.space-y-2                  
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación
                        p.text-gray-600 Arrastra el pin en la ubicación de propiedad en el mapa
                        #mapa.h-96

                        div 
                            p.calle

                        input(type="hidden", name="calle", id="calle")
                        input(type="hidden", name="lat", id="lat")
                        input(type="hidden", name="lng", id="lng")

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")
