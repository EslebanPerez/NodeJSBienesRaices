div(class="bg-white shadow rounded-lg")
  img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.image}` alt=`${propiedad.titulo}` )
  div(class="p-5 space-y-3")
      h3(class="text-xl font-bold")=propiedad.titulo
      p(class="test-sm text-gray-600") Habitaciones: 
          span(class="text-gray-800 font-bold")=propiedad.habitaciones
      p(class="test-sm text-gray-600") WC: 
          span(class="text-gray-800 font-bold")=propiedad.wc 
      p(class="test-sm text-gray-600") Precio: 
          span(class="text-gray-800 font-bold")=propiedad.precio.nombre
      a(href=`/propiedad/${propiedad.id}` class="bg-lime-400 w-full text-center block font-bold text-zinc-900 p-2 uppercase rounded") Ver propiedad
