extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold=title

        div(class =" mt-8 mx-auto max-w-md")
            div.bg-white.py-8.px-4.shadow
                form.space-y-5
                    div    
                        label(for= "email",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Email
                        input(type="email", name="email", placeholder="Email", class="w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow appearance-none focus:outline-1 focus:outline-lime-200 focus:bg-lime-50 focus:shadow-outline")
                    div        
                        label(for= "password",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Contraseña
                        input(type="password", name="password", placeholder="Contraseña", class="w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow appearance-none focus:outline-1 focus:outline-lime-200 focus:bg-lime-50 focus:shadow-outline")

                    div.flex.items-center.justify-between                         
                        a(href='/auth/registro' class='text-xs ml-2 text-sky-400 font-bold hover:text-sky-600') Registrarme
                        a(href='/auth/forgot-password' class='text-xs ml-2 text-sky-400 font-bold hover:text-sky-600') Olvide mi contraseña
                    input(type="submit", value="Iniciar sesión", class="w-full px-3 py-3 text-zinc-900 font-bold tracking-wide cursor-pointer bg-lime-300 border-0 rounded-md shadow hover:bg-lime-500 focus:outline-1 focus:outline-lime-200 focus:bg-lime-50 focus:shadow-outline")    