extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold=title
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-500.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        
        div(class =" mt-8 mx-auto max-w-md")
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" noValidate)
                    input(type="hidden", name="_csrf", value=csrfToken)
                    div    
                        label(for= "password",class = "block text-sm text-gray-700 uppercase font-bold mb-1 " ) Nueva contraseña
                        input(type="password", name="password", placeholder="Nueva contraseña", class="w-full px-3 py-3 text-gray-400 border-md rounded-lg shadow appearance-none focus:outline-1 focus:outline-lime-200 focus:bg-lime-50 focus:shadow-outline")

                    input(type="submit", value="Guardar contraseña", class="w-full px-3 py-3 text-zinc-900 font-bold tracking-wide cursor-pointer bg-lime-300 border-0 rounded-md shadow hover:bg-lime-500 focus:outline-1 focus:outline-lime-200 focus:bg-lime-50 focus:shadow-outline")    